<div class="admin-content">
<%= form_tag("/create", method: "post") do %>
  <div class="admin-content-body">
    <div class="am-cf am-padding am-padding-bottom-0">
      <div class="am-fl am-cf">
        <strong class="am-text-primary am-text-lg">预定酒店</strong> /
        <small>登记信息</small>
      </div>
    </div>

    <hr>

    <div class="am-tabs am-margin" data-am-tabs>
      <ul class="am-tabs-nav am-nav am-nav-tabs">
        <li class="am-active"><a href="#tab1">基本信息</a></li>
      </ul>
      <div>


      <div class="am-tabs-bd">
        <div class="am-tab-panel am-fade am-in am-active" id="tab1">
        <% if $err == 1 %>
         <%= render 'shared/error_messages' %>
        <% $err = 0 %>
        <% end %>
                      
            <div class="am-g am-margin-top">
              <div class="am-u-sm-4 am-u-md-2 am-text-right">
                客户名称
              </div>
              <div class="am-u-sm-8 am-u-md-4">
                <input type="text" class="am-input-sm" name="c_name">
              </div>
              <div class="am-hide-sm-only am-u-md-6"></div>
            </div>

            <div class="am-g am-margin-top">
              <div class="am-u-sm-4 am-u-md-2 am-text-right">
                客户电话
              </div>
              <div class="am-u-sm-8 am-u-md-4">
                <input type="text" class="am-input-sm" name="c_tel">
              </div>
              <div class="am-hide-sm-only am-u-md-6"></div>
            </div>            

            <div class="am-g am-margin-top">
              <div class="am-u-sm-4 am-u-md-2 am-text-right">
                入住房间
              </div>
              <div class="am-u-sm-8 am-u-md-4">
                <input type="text" class="am-input-sm" name="c_room">
              </div>
              <div class="am-hide-sm-only am-u-md-6"></div>
            </div>             
            
          <div class="am-g am-margin-top">
            <div class="am-u-sm-4 am-u-md-2 am-text-right">支付方式</div>
            <div class="am-u-sm-8 am-u-md-10">
              <div class="am-btn-group" data-am-button>
                <label class="am-btn am-btn-default am-btn-xs">
                  <input type="radio" name="options" id="option1" value="1"> 现金
                </label>
                <label class="am-btn am-btn-default am-btn-xs">
                  <input type="radio" name="options" id="option2" value="2"> 信用卡
                </label>
                <label class="am-btn am-btn-default am-btn-xs">
                  <input type="radio" name="options" id="option3" value="3"> 支付宝
                </label>
                <label class="am-btn am-btn-default am-btn-xs">
                  <input type="radio" name="options" id="option3" value="4"> 微信支付
                </label>                
              </div>
            </div>
          </div>


          <div class="am-g am-margin-top">
            <div class="am-u-sm-4 am-u-md-2 am-text-right">
              入住日期
            </div>
            <div class="am-u-sm-8 am-u-md-3">
              <form action="" class="am-form am-form-inline">
                <div class="am-form-group am-form-icon">
                  <i class="am-icon-calendar"></i>
                  <input type="date" class="am-form-field am-input-sm" placeholder="日期" name="c_date">
                </div>
              </form>             
            </div>
            <div class="am-hide-sm-only am-u-md-7"></div>             
          </div>

        </div>

      </div>
    </div>

    <div class="am-margin am-pagination am-pagination-right">
      <input type="submit" class="am-btn am-btn-primary am-btn-xs" value="提交保存">
      <button type="button" class="am-btn am-btn-primary am-btn-xs" onclick="window.location.href='/'">放弃保存</button>
    </div>
<% end %>

  </div>

</div>